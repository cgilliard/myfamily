include Makefile.config

all: $(SUBDIRS)
	$(CC) $(CC_FLAGS) -o bin/fam $(ALL_OBJS)
clean:
	rm -rf */*.o
	rm -rf bin/*
	rm -rf */*.gcno
	rm -rf */*.gcda
	rm -rf */*.gcov
	rm -rf *.gcno
	rm -rf *.gcda
	rm -rf *.gcov
$(SUBDIRS):
	$(MAKE) -C $@
test: $(SUBDIRS)
	ERROR="0"; \
	for dir in $(SUBDIRS); do \
		$(MAKE) -C $$dir test; \
		if [ $$? -ne "0" ]; then \
		ERROR="1"; \
		fi; \
	done; \
	if [ $$ERROR -ne "0" ]; then \
		$$? = 1; \
	fi
doc:
	doxygen doxygen.cfg
install:
	cp bin/fam /usr/local/bin
.PHONY: all $(SUBDIRS)
.PHONY: test $(SUBDIRS)
